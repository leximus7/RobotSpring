<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       default-lazy-init="true"
>

    <context:annotation-config/>

    <import resource="toshiba_context.xml"/>
    <import resource="sony_context.xml"/>


    <bean id="t1000Pool" class="ru.javabegin.training.spring.impls.pool.T1000Pool"/>


    <bean id="bronzeT1000" class="ru.javabegin.training.spring.impls.robot.ModelT1000" scope="prototype">
        <property name="color" value="BRONZE"/>
        <property name="year" value="2015"/>
        <qualifier type="ru.javabegin.training.spring.common.RobotQualifier">
            <attribute key="color" value="BRONZE"/>
            <attribute key="year" value="2015"/>
        </qualifier>

    </bean>

    <bean id="goldenT1000" class="ru.javabegin.training.spring.impls.robot.ModelT1000" scope="prototype">
        <property name="color" value="GOLD"/>
        <property name="year" value="2016"/>
        <qualifier type="ru.javabegin.training.spring.common.RobotQualifier">
            <attribute key="color" value="GOLD"/>
            <attribute key="year" value="2016"/>
        </qualifier>
    </bean>

    <bean id="goldenT1000_1" class="ru.javabegin.training.spring.impls.robot.ModelT1000" scope="prototype">
        <property name="color" value="GOLD"/>
        <property name="year" value="2017"/>
        <qualifier type="ru.javabegin.training.spring.common.RobotQualifier">
            <attribute key="color" value="GOLD"/>
            <attribute key="year" value="2017"/>
        </qualifier>
    </bean>

    <bean id="silverT1000" class="ru.javabegin.training.spring.impls.robot.ModelT1000" scope="prototype">
        <property name="color" value="SILVER"/>
        <property name="year" value="2012"/>
        <qualifier type="ru.javabegin.training.spring.common.RobotQualifier">
            <attribute key="color" value="SILVER"/>
            <attribute key="year" value="2012"/>
        </qualifier>
    </bean>


</beans>
